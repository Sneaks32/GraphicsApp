<Window x:Class="GraphicsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Graphics App" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="sceneCanvas" Background="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left">
            <Button Content="Добавить треугольник" Click="AddTriangle_Click" Margin="5"/>
            <Button Content="Добавить надпись" Click="AddText_Click" Margin="5"/>
            <Button Content="Добавить изображение" Click="AddImage_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
